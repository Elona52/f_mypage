<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mp.mapper.ReviewMapper">

    <resultMap id="reviewMap" type="com.mp.domain.Review">
        <id property="id" column="review_id"/>
        <result property="userId" column="user_id"/>
        <result property="instructorId" column="instructor_id"/>
        <result property="reservationId" column="reservation_id"/>
        <result property="rating" column="rating"/>
        <result property="comment" column="content"/>
        <result property="createdAt" column="created_at"/>
    </resultMap>

    <!-- 전체 조회 -->
    <select id="findAll" resultMap="reviewMap">
        SELECT * FROM review ORDER BY created_at DESC
    </select>

    <!-- 단건 조회 -->
    <select id="findById" resultMap="reviewMap">
        SELECT * FROM review WHERE review_id = #{id}
    </select>

    <!-- instructor 별 리뷰 조회 -->
    <select id="findByInstructor" resultMap="reviewMap">
        SELECT * FROM review WHERE instructor_id = #{instructorId}
    </select>

    <!-- member 별 리뷰 조회 -->
    <select id="findByUser" resultMap="reviewMap">
        SELECT * FROM review WHERE user_id = #{userId}
    </select>

    <!-- 예약 1건 = 리뷰 1개 규칙 -->
    <select id="findByReservation" resultMap="reviewMap">
        SELECT * FROM review WHERE reservation_id = #{reservationId}
    </select>

    <!-- 등록 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO review (user_id, instructor_id, reservation_id, rating, content)
        VALUES (#{userId}, #{instructorId}, #{reservationId}, #{rating}, #{comment})
    </insert>

    <!-- 수정 -->
    <update id="update">
        UPDATE review
        SET rating = #{rating},
            content = #{comment}
        WHERE review_id = #{id}
    </update>

    <!-- 삭제 -->
    <delete id="delete">
        DELETE FROM review WHERE review_id = #{id}
    </delete>

</mapper>
